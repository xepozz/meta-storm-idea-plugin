<?xml version="1.0" encoding="UTF-8" ?>
<meta-storm xmlns="meta-storm">
    <definitions>
        <classMethod class="\Controller" method="render" argument="0">
            <files extension="" relatedTo="directory"/>
        </classMethod>
        <classMethod class="\Controller" method="renderBlade" argument="0">
            <files extension="blade.php" relatedTo="directory"/>
        </classMethod>
        <classMethod class="\Renderer" method="render" argument="0">
            <files extension="" relatedTo="directory"/>
        </classMethod> 
        <function name="render" argument="0">
            <files extension="" relatedTo="directory"/>
        </function>
        <function name="renderProject" argument="0">
            <files extension="php" relatedTo="project" >
                <directoryProcessors>
                    <append value="examples/files/append" />
                    <regexp from="(.+)/append" to="$1/views" />
                </directoryProcessors>
            </files>
        </function>
        <function name="renderThemed" argument="0">
            <files extension="php" relatedTo="project" >
                <directoryProcessors>
                    <append value="examples/files/themes/${VIEW-THEME}" />
                </directoryProcessors>
            </files>
        </function>
    </definitions>
    <envs>
        <env name="VIEW-THEME" value="dark" />
    </envs>
</meta-storm>
